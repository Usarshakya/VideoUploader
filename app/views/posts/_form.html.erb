<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descrition, "Whats your video about?" %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <% if post.video.present? %>
      <%= video_tag post.video_url.to_s %>
    <% end %>

    <%= f.label :Video %>    
    <%= f.file_field :video %>    
  </div>

  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
