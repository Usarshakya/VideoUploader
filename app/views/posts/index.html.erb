<%- model_class = Post -%>

<table class="table table-striped">  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>        
        <td><%= video_tag post.video_url %></td>
        <td>
          <p>
            <b><%= post.title %></b>
            <%= post.description %>
          </p>
        </td>   
        
      </tr>
    <% end %>
  </tbody>
</table>


