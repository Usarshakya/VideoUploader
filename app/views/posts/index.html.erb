<%- model_class = Post -%>

<table class="table table-striped">  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, post_path(post) %></td>        
        <td><%= video_tag post.video_url %></td>
        <td><b><%= post.description %></b></td>       
        
      </tr>
    <% end %>
  </tbody>
</table>


