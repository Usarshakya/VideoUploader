<%- model_class = Post -%>

<table class="table table-striped">  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
              
        <td><%= video_tag post.video.url, controls: true %></td>
        <td>
          <p>
            <b><%= post.title %></b><br>
            <%= post.description %>
          </p>
        </td> 
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      post_path(post), :class => 'btn btn-default btn-xs' %>
        </td>  
        
      </tr>
    <% end %>
  </tbody>
</table>


